<resources>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrap.Width0dp">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Wrap.Height0dp">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Wrap.Width0dpHeight0dp">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wide.Height0dp">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Tall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Tall.Width0dp">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Tall.Height0dp">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.AppTheme">
        <item name="editTextStyle">@style/Widget.AppCompat.EditText.AppTheme</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorIconDrawable">@null</item>
        <item name="maxHeight">30dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
    </style>

    <style name="Widget.AppCompat.EditText.AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="AlertDialog"
        parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">400dp</item>
        <item name="dialogCornerRadius">10dp</item>
    </style>

</resources>